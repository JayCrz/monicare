<%= render 'shared/frontend/navbar' %>
<%= render 'shared/flash' if notice %>
<div class="container text-center">
  <h1 class="text-warning">我的小孩</h1>
  <div class="row">
    <% @children.each do |child| %>
      <%= link_to dashboard_child_overview_path(child.id), class: 'col-3' do %>
        <div class="card">
          <img src="<%= show_child_pic_image child %>" class="card-img-top child_pic" alt="<%= child.name %>的照片">
          <div class="card-body">
            <h5 class="card-title text-dark font-weight-bold"><%= child.name %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
