<div class="container task-edit">
<h2>編輯 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-color" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password, '新密碼' %> <i>(如不更新、請留空)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-color" %>
    <% if @minimum_password_length %>
      
      <em>( 最少 <%= @minimum_password_length %> 個字母 )</em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, '確認新密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-color" %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password, '輸入舊密碼' %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-color" %>
  </div>

  <div class="actions">
    <%= f.submit "更新資料", class: "btn btn-info" %>
  </div>
<% end %>

<h3 class="my-3">刪除我的帳號</h3>

<p> <%= button_to "刪除", registration_path(resource_name), data: { confirm: "確定嗎?" }, method: :delete, class: "btn btn-dark" %></p>

<%= link_to "返回", :back, class: 'btn btn-link' %>
</div>

