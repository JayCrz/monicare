<%= render 'shared/frontend/navbar'%>


<div class="container">
  <h1 class="text-warning text-center"><%= @find_child.name %></h1>

  <%= form_with model: @find_medicine, url: dashboard_child_medicine_path	, local: true do |form| %>

    <div class="form-group">
      <%= form.label :title, '用藥名稱', class:'text-white' %>
      <%= form.text_field :title, class:'form-control'  %>
    </div>

    <div class="form-group">
    <%= form.label :started_at, '用藥時間', class:'text-white' %>
    <%= form.date_field :started_at, class:'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :content, '備註', class:'text-white' %>
    <%= form.text_area :content, class:'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :parent_sign, '給藥者簽名', class:'text-white' %>
    <%= form.text_area :parent_sign, class:'form-control' %>
    </div>
    



    <div class="form-group">
    <%= form.submit '更新紀錄', class:'btn btn-warning' %>
    </div>
  <% end %>
</div>