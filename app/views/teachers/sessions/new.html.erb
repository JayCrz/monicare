
<div class="babybackgorund">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="homepagebox d-flex justify-content-center align-items-center">
  <div class="p-5 homepagepgc">
    <h3>老師登入</h3>
    <div class="field form-group ">
      <%= f.label :email, '信箱' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group ">
      <%= f.label :password, '密碼' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="">
      <div class="actions">
        <%= f.submit "登入", class: "btn btn-success" %><br>
        沒有帳號
      </div>
      <%= render "teachers/shared/links" %>
    </div>
    </div>
</div>
<% end %>



