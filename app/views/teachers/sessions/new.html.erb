<div class="babybackgorund task-edit">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container homepage_box d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-10 col-lg-8 p-5 homepage_background_color">
        <h3 class="font-weight-bold">老師登入</h3>
        <%= render 'layouts/messages' %>
        <div class="field form-group">
          <%= f.label :email, '信箱' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-color" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, '密碼' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-color" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, '記住我' %>
          </div>
        <% end %>
        
        <div>
          <div class="actions">
            <%= f.submit "登入", class: "btn sign-in-button w-100" %>
          </div>
          <div class="my-1"><%= render "teachers/shared/links" %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
