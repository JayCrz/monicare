
<div class="babybackgorund">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container homepage_box d-flex justify-content-center align-items-center">
  <div class=" p-5 homepage_background_color ">
  <h3>老師註冊</h3>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field form-group">
    <%= f.label :name, '姓名' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %> 
  </div>

  <div class="field form-group">
    <%= f.label :email, '信箱' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, '密碼' %>
    <% if @minimum_password_length %>
    <em>(最少<%= @minimum_password_length %> 個字母)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, '確認密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
  <div class="">
  <div class="actions">
    <%= f.submit "註冊", class:" btn btn-success" %><br>
    已有帳號
  </div>
  <%= render "teachers/shared/links" %>
  </div></div>
  </div>
<% end %>
</div>

