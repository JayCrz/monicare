<div class="container text-center">
  <h4 class="function-subtitle function-subtitle-pick-up mb-3 mt-2">
    可接送親屬    
    <%= link_to new_dashboard_child_pick_up_path(child), class: 'create-button-pick-up' do %>
      <i class="fas fa-plus-circle"></i>
    <% end %>
  </h4>
  <div class="row">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-wrap">
      <% child.pick_ups.each do |pick_up| %>
        <div class="col-6 mb-3">
          <%= link_to dashboard_child_pick_up_path(:child_id => child.id, :id => pick_up.id) do %>
            <div class="card">
              <div class="card-image">
                <img src="<%= show_image pick_up %>" class="card-img-top avatar-relative" alt="<%= pick_up.name %>的照片">
              </div>
              <div class="card-body align-items-center pt-3 pb-3">
                <h5 class="card-title font-weight-bold relative-name"><%= pick_up.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
