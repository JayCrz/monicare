<%= render 'shared/frontend/navbar' %>
<%= render 'shared/flash' if notice %>
<div class="container text-center function-page">
  <div class="row">
    <div class="col-10 col-md-8 col-lg-6 mb-2 d-flex align-items-center">
      <div class="pl-0 pr-0 m-0 avatar-child">
        <%= link_to dashboard_child_overview_path(params[:id]) do %>
          <img src="<%= show_child_pic_image @child %>" class="card-img-top child_pic" alt="<%= @child.name %>的照片">
          <%= @child.name %>
        <% end %>
      </div>
    </div>
    <div class="list-group col-12 mb-3 mx-auto d-flex flex-row p-0">
      <a class="list-group-item active function-item-medicine col-3" id="list-medicine-list" data-toggle="list" href="#feed-medicine">
        <i class="fas fa-capsules mb-1"></i><br>
        <span>餵藥紀錄</span>
      </a>
      <a class="list-group-item function-item-meal col-3" id="list-meal-list" data-toggle="list" href="#meal">
        <i class="fas fa-utensils mb-1"></i><br>
        <span>用餐紀錄</span>
      </a>
      <a class="list-group-item function-item-pick-up col-3" id="list-pick-up-list" data-toggle="list" href="#list-pick-up">
        <i class="fas fa-user-check mb-1"></i><br>
        <span>換人接送</span>
      </a>
      <a class="list-group-item function-item-misc col-3" id="list-misc-list" data-toggle="list" href="#misc">
        <i class="fas fa-pencil-alt mb-1"></i><br>
        <span>生活紀錄</span>
      </a>
    </div>
    <div class="col-12 mx-auto">
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="feed-medicine">
          <%= render 'feed_medicine', dashboards: @dashboards_medicine %>
        </div>
        <div class="tab-pane fade" id="meal" >
          <%= render 'meal', dashboards: @dashboards_meal %>
        </div>
        <div class="tab-pane fade" id="list-pick-up">
          <%= render 'pick_up', pick_ups: @pick_ups, child: @child %>
        </div>
        <div class="tab-pane fade" id="misc">
          <%= render 'misc', dashboards: @dashboards_misc %>
        </div>
      </div>
    </div>
  </div>
</div>
