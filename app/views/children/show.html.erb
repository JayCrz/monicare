<%= render 'shared/frontend/navbar' %>
<%= render 'shared/flash' if notice %>
<div class="container">
  <h1 class="text-warning text-center"><%= @child.name %></h1>
  <div class="row">
  <div class="col-4">
    <div class="list-group">
      <a class="list-group-item list-group-item-warning active" id="list-home-list" data-toggle="list" href="#feed-medicine">餵藥</a>
      <a class="list-group-item list-group-item-warning" id="list-profile-list" data-toggle="list" href="#meal">吃飯</a>
      <a class="list-group-item list-group-item-warning" id="list-pick-up-list" data-toggle="list" href="#list-pick-up">換人接送</a>
      <a class="list-group-item list-group-item-warning" id="list-settings-list" data-toggle="list" href="#other">其他</a>
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="feed-medicine">
        <%= render 'feed_medicine', dashboards:@dashboards %>
      </div>
      <div class="tab-pane fade" id="meal" >
        <%= render 'meal', dashboards:@dashboards %>
      </div>
      <div class="tab-pane fade" id="list-pick-up" ><%= render 'pick_up', child: @child, pick_ups: @pick_ups %></div>
      <div class="tab-pane fade" id="other" >
        <%= render 'misc', dashboards:@dashboards %>
      </div>
    </div>
  </div>
</div>
</div>

