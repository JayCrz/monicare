<%= render 'shared/frontend/navbar' %>

<div class="container overview">
  <div class="row no-gutters bg-light position-relative shadow-lg">
    <div class="col-md-4  col-4 mb-md-0 p-md-4 p-2">
      <img src="<%= show_child_pic_image Child.find(params[:child_id]) %>" class="card-img-top child_pic w-100 alt=">
    </div>
    <div class="col-md-7 col-7 position-static p-sm-4 px-1">
      <h4><%= @child.name %></h4>
      <h5 class="mt-0">園內生活點滴</h5>
      <%= link_to "進入功能列表", dashboard_child_path(@child.id), class: 'btn function-button' %>
      <% if request.path === "/dashboard/children/#{params[:child_id]}/overview" %>
        <form class="form-inline my-2 searching-form">
          <input class="form-control mr-sm-2 search" type="search" placeholder="請輸入查詢日" aria-label="Search">
          <button class="btn btn-danger my-2 my-sm-0 search_btn" type="submit">搜尋</button>
        </form>
      <% end %>
    </div>
  </div>

  <div class="dashboard_list">
    <% @dashboards.each do |date,dashboard| %>
      <table class="table">
        <caption><%= date.to_date %></caption>
        <tbody class="list">
          <% dashboard.each do |d| %>
              <tr>
                <td><%= link_to d.title, "/dashboard/children/#{d.child_id}/#{d.category}/#{d.id}", class: 'font-weight-bold link-button' %></td>
                <td><%= d.content %></td>
                <td><%= link_to '詳情', "/dashboard/children/#{d.child_id}/#{d.category}/#{d.id}", class: 'btn more-button' %></td>
              </tr>       
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>  
</div>

