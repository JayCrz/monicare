<div class="container text-center">
  <h4 class="function-subtitle function-subtitle-misc mb-3 mt-2">生活紀錄</h4>
  <% dashboards.each do |date, dashboard| %>
    <div class="table-list mt-2 mb-3 col-12">
      <table class="table">
        <caption><%= date.to_date %></caption>
        <tbody>
          <% dashboard.each do |d| %>
            <tr>
              <th>
                <%= link_to d.title, dashboard_child_misc_path(child_id: d.child_id, id: d.id), class: 'text-dark' %>
              </th>
              <% if d.content.present? %>
                <td><%= d.content %></td>
              <% else %>
                <td>尚無註明內容</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
