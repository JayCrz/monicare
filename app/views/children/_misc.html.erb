<div class="container text-center">
  <h4 class="function-subtitle function-subtitle-misc mb-3 mt-2">生活紀錄</h4>
  <table class="table">
    <tbody>
      <% dashboards.order(finished_at: :desc).misc.each do |dashboard| %>
        <tr>
          <td><%= dashboard.title %></td>
          <td><%= dashboard.finished_at.to_date %></td>
          <td><%= dashboard.content %></td>
          <td><%= link_to '詳情', dashboard_child_misc_path(child_id: params[:id], id: dashboard.id), class: 'btn more-button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
