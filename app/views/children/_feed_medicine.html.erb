<div class="container text-center">
  <h4 class="function-subtitle function-subtitle-medicine mb-3 mt-2">
    餵藥紀錄
    <%= link_to new_dashboard_child_medicine_path(child_id: params[:id]), class: 'create-button-medicine' do %>
      <i class="fas fa-plus-circle"></i>
    <% end %>
  </h4>
  <% dashboards.each do |date,dashboard| %>
    <div class="table-list mt-2 mb-3">
      <table class="table">
        <caption><%= date %></caption>
        <tbody>
          <% dashboard.each do |d| %>
            <tr>
            <th class="font-weight-bold title-of-editor">
                <%= link_to d.title, dashboard_child_medicine_path(child_id: d.child_id, id: d.id), class: 'text-dark' %>
              </th>
              <% if d.finished_at == nil %>
                <td class="icon-of-editor">
                  <%= link_to edit_dashboard_child_medicine_path(child_id: d.child_id, id: d.id), class: 'btn edit-button p-0' do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to dashboard_child_medicine_path(child_id: d.child_id, id: d.id), method: :delete , class: 'btn delete-button confirm_delete p-0' do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                </td>
              <% else %>
                <td>
                  已完成餵藥
                  <i class="fas fa-check text-danger"></i>
                </td> 
              <% end %>
            </tr>
          <% end %> 
        </tbody> 
      </table>
    </div>
  <% end %>
</div>
