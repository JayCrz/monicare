<div class="container text-center">
  <h2>用藥明細</h2>
  <table class="table">
    <tbody>
      <% dashboards.order(started_at: :desc).medicine.each do |dashboard| %>
        <tr>
          <td><%= link_to dashboard.title, dashboard_child_medicine_path(child_id: params[:id], id: dashboard.id), class: 'text-dark' %></td>
          <td><%= dashboard.started_at.to_date %></td>
          <% if dashboard.finished_at == nil %>
            <td><%= link_to '編輯', edit_dashboard_child_medicine_path(child_id: params[:id], id: dashboard.id), class: 'btn btn-info' %></td>
            <td><%= link_to '刪除', dashboard_child_medicine_path(child_id: params[:id], id: dashboard.id), method: :delete , data: {confirm:'確定刪除這筆資料？'}, class: 'btn btn-danger' %></td>
          <% else %>
            <td colspan="2">老師已完成餵藥</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to '新增餵藥紀錄', new_dashboard_child_medicine_path(child_id: params[:id]), class: 'btn btn-warning' %>
</div>
