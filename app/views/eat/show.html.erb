<%= render 'shared/frontend/navbar' %>
<div class="container task-show">
  <%= render 'shared/frontend/child_avatar', child: @child %>
  <h4 class="text-center font-weight-bold title-color mb-3">
    用餐紀錄
  </h4>
  <div class="meal_pic mb-3">
    <%= cover_meal_pic_image_tag @meal_dashboards if @meal_dashboards.admin_sign? %>
  </div>
  <table class="table table-hover">
    <tbody>
      <tr>
        <td colspan="2">
          <span class="font-weight-bold">餐別</span><br><br>
          <%= @meal_dashboards.title %>
        </td>
      </tr>
      <tr>
        <th scope="row">用餐日期</th>
        <td><%= @meal_dashboards.finished_at.to_date %></td>
      </tr>
      <tr>
        <td colspan="2">
          <span class="font-weight-bold">用餐內容</span><br><br>
          <% if @meal_dashboards.content.present? %>
            <%= @meal_dashboards.content %>
          <% else %>
            無註明用餐內容
          <% end %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <%= link_to '返回功能列表', dashboard_child_path(id: params[:child_id], anchor: 'meal'), class: 'btn back-button' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
