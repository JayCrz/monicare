<%= render 'shared/frontend/navbar' %>
<div class="container task-show">
  <h2 class="text-center font-weight-bold title-color mb-3">
    <%= @child.name %><br>
    用餐紀錄
  </h2>
  <div class="meal_pic mb-3">
    <%= cover_meal_pic_image_tag @meal_dashboards %>
  </div>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th scope="row">餐別</th>
        <td><%= @meal_dashboards.title %></td>
      </tr>
      <tr>
        <th scope="row">用餐日期</th>
        <td><%= @meal_dashboards.finished_at.to_date %></td>
      </tr>
      <tr>
        <th scope="row">用餐內容</th>
        <td><%= @meal_dashboards.content %></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= link_to '返回功能列表', dashboard_child_path(id: params[:child_id], anchor: 'meal'), class: 'btn back-button' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
