<%= render 'shared/frontend/navbar' %>
<div class="container task-show">
  <%= render 'shared/frontend/child_avatar', child: @child %>
  <h4 class="text-center font-weight-bold title-color mb-3">
    生活紀錄
  </h4>
  <div class="misc_pic mb-3">
    <%= cover_misc_pic_image_tag @misc_dashboards %>
  </div>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th scope="row">餐別</th>
        <td><%= @misc_dashboards.title %></td>
      </tr>
      <tr>
        <th scope="row">用餐日期</th>
        <td><%= @misc_dashboards.finished_at.to_date %></td>
      </tr>
      <tr>
        <th scope="row">用餐內容</th>
        <td><%= @misc_dashboards.content %></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= link_to '返回功能列表', dashboard_child_path(id: params[:child_id], anchor: 'misc'), class: 'btn back-button' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
