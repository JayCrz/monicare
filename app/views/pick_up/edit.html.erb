<%= render 'shared/frontend/navbar' %>
<h1>修改<%= @pick_up.name %>的資料</h1>

<%= form_with scope: :pick_up, url: dashboard_child_pick_up_path(:child_id => @child.id, :id => @pick_up.id), method: :put, local: true do |form| %>
  <%= form.label :name, "姓名" %>
  <%= form.text_field :name %>

  <%= form.label :pick_up_pic, "照片" %>
  <%= form.file_field :pick_up_pic %>

  <%= form.label :relationship, "與小朋友的關係" %>
  <%= form.text_field :relationship %>

  <%= form.label :note, "備註" %>
  <%= form.text_area :note %>

  <%= form.submit "送出" , class: 'btn' %>
<% end %>