<%= render 'shared/frontend/navbar' %>

<div class="container task-show">
  <h4 class="text-center font-weight-bold title-color mb-3">可接送<%= @child.name %>的親屬</h4>
  <div class="pick_up_pic mb-3">
    <%= cover_image_tag @pick_up %>
  </div>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th scope="row">姓名</th>
        <td><%= @pick_up.name %></td>
      </tr>
      <tr>
        <th scope="row">關係</th>
        <td><%= @pick_up.relationship %></td>
      </tr>
      <tr>
        <th scope="row">備註</th>
        <td><%= @pick_up.note %></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= link_to "返回功能列表", dashboard_child_path(@child.id, anchor: 'list-pick-up'), class: 'btn back-button' %>
          <%= link_to "編輯", edit_dashboard_child_pick_up_path(:child_id => @child.id, :id => @pick_up.id), class: 'btn edit-button' %>
          <%= link_to "刪除", dashboard_child_pick_up_path(:child_id => @child.id, :id => @pick_up.id), method: 'delete', class: 'btn btn-danger confirm_delete' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
