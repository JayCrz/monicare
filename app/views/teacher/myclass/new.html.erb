<%= render 'shared/backend/navbar' %>
<div class="container new-child task-edit">
  <div class="col-sm-10 col-md-8 col-lg-6 mx-auto rounded new-child-backgroud">
    <h4 class="new-child-title text-center font-weight-bold mb-3">新增班級</h4>
    <%= form_with scope: :class, url: teacher_dashboard_myclass_index_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :nursery_class, '班級名稱' %>
        <%= form.text_field :nursery_class, class: 'form-control form-control-color' %>
      </div>
      <div class="form-group">
        <%= form.label :nursery_teacher, '班級導師' %>
        <%= form.text_field :nursery_teacher, :value => current_teacher.name, class: 'form-control form-control-color', disabled: true %>
      </div>
      
      <div class="form-group">
        <%= form.hidden_field :teacher_id, :value => current_teacher.id, class: 'form-control form-control-color' %>
      </div>
      <div class="form-group">
        <%= form.submit '新增班級', class: 'btn submit-button form-control' %>
      </div>
    <% end %>
  </div>
</div>
