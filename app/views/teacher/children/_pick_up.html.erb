<div class="container text-center">
  <h2 class="text-white">可接送親屬</h2>
  <div class="row">
    <% pick_ups.each do |pick_up| %>
      <%= link_to teacher_dashboard_child_pick_up_path(:child_id => student.id, :id => pick_up.id), class: 'col-6' do %>
        <div class="card">
          <img src="<%= show_image pick_up %>" class="card-img-top avatar-relative text-dark" alt="可接送親屬<%= pick_up.name %>的照片">
          <div class="card-body">
            <h5 class="card-title text-dark font-weight-bold"><%= pick_up.name %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
