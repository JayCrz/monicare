<div class="container text-center">
  <h4 class="function-subtitle function-subtitle-pick-up mb-3 mt-2">可接送親屬</h4>
  <div class="row">
    <div class="col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-wrap">
      <% pick_ups.each do |pick_up| %>
        <div class="col-6 mb-3">
          <%= link_to teacher_dashboard_child_pick_up_path(:child_id => student.id, :id => pick_up.id) do %>
            <div class="card">
              <div class="card-image">
                <img src="<%= show_image pick_up %>" class="card-img-top avatar-relative" alt="可接送親屬<%= pick_up.name %>的照片">
              </div>
              <div class="card-body align-items-center pt-3 pb-3">
                <h5 class="card-title font-weight-bold relative-name m-1"><%= pick_up.name %></h5>
                <p class="card-text text-dark font-weight-bold">關係: <%= pick_up.relationship %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
