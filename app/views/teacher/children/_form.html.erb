<div class="container new-child task-edit">
  <div class="col-sm-10 col-md-8 col-lg-6 mx-auto rounded new-child-backgroud">
    <h3 class="new-child-title text-center font-weight-bold mb-3">新增小朋友</h3>
    <%= form_with(model: [:teacher, dashboard, child], local: true) do |form| %>
      <div class="child_pic mb-3">
        <%= cover_child_pic_image_tag child %>
      </div>
      <div class="input-group mb-3">
        <div class="custom-file">
          <%= form.label :child_pic, "請上傳照片", class: 'custom-file-label child_pic_url url-color form-control-color' %>
          <%= form.file_field :child_pic, class: 'custom-file-input' %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :name, '姓名' %>
        <%= form.text_field :name, class: 'form-control form-control-color' %>
      </div>
      <div class="form-row">
        <div class="form-group col-sm-12 col-md-6">
          <%= form.label :user_id, '家長' %>
          <%= form.collection_select :user_id, User.all, :id, :name %>
        </div>
        <div class="form-group col-sm-12 col-md-6">
          <%= form.label :babyclass_id, '班級' %>
          <%= form.collection_select :babyclass_id, Babyclass.all, :id, :nursery_class %>
        </div>
      </div>
      <div class="form-group">
        <%= form.hidden_field :teacher_id, :value => current_teacher.id, class: 'form-control form-control-color' %>
      </div>
      <div class="form-group">
        <%= form.submit '新增小朋友', class: 'btn submit-button form-control' %>
      </div>
    <% end %>
  </div>
</div>
