<div class="container text-center">
  <h4 class="function-subtitle function-subtitle-medicine mb-3 mt-2">餵藥紀錄</h4>
  <% dashboards.each do |date,dashboard| %>
    <div class="table-list mt-2 mb-3">
      <table class="table">
        <caption><%= date.to_date %></caption>
        <tbody>
          <% dashboard.each do |d| %>
            <tr>
              <th class="font-weight-bold text-dark">
                <%= link_to d.title, teacher_dashboard_child_medicine_path(child_id: d.child_id, id: d.id), class: 'text-dark' %>
              </th>
              <% if d.finished_at === nil %>
                <td colspan="2">
                  <%= link_to edit_teacher_dashboard_child_medicine_path(child_id: d.child_id, id: d.id), class: 'btn edit-button p-0 font-weight-bold' do %>
                    <i class="fas fa-signature"></i>
                    餵藥簽名
                  <% end %>
                </td>
              <% else %>
                <td colspan="2">
                  已完成餵藥
                  <i class="fas fa-check text-danger"></i>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
