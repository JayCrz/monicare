<%= render 'shared/backend/navbar' %>

<div class="container ">
<h1 class="text-white"><%= @teacher.name %>所有的學生</h1>
<table class="table text-white">
  <thead class="text-warning">
    <tr>
      <th scope="col">照片</th>
      <th scope="col">學生</th>
      <th scope="col">詳情</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
          <td>圖</td>
          <td><%= student.name %></td>
          <td><%= link_to '點我看更多',teacher_dashboard_child_path(student)  %></td>
      </tr>
    <% end %>

  </tbody>
</table>
</div>

