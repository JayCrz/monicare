<%= render 'shared/backend/navbar'%>
<div class="container">
  <h1 class="text-warning text-center"><%= @student.name %></h1>
  <%= form_with scope: :dashboard, url: teacher_dashboard_child_misc_index_path, local: true do |form| %>
    <div class="misc_pic mb-3">
      <%= cover_misc_pic_image_tag @misc_dashboard %>
    </div>
    <div class="input-group mb-3">
      <div class="custom-file">
        <%= form.label :admin_sign, "請上傳照片", class: 'custom-file-label misc_pic_url' %>
        <%= form.file_field :admin_sign, class: 'custom-file-input' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :title, '標題' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :finished_at, '時間' %>
      <%= form.date_field :finished_at, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :content, '內容' %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.hidden_field :category, :value => 'misc', class: 'form-control' %>
      <%= form.hidden_field :child_id, :value => params[:child_id],  class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.submit '新增紀錄', class: 'btn btn-warning' %>
    </div>
  <% end %>
</div>
