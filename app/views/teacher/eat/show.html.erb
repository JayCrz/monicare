<%= render 'shared/backend/navbar'%>

<div class="container task-show">
  <%= render 'shared/backend/child_avatar', student: @student %>
  <h4 class="text-center font-weight-bold title-color mb-3">
    用餐紀錄
  </h4>
  <div class="meal_pic mb-3">
    <%= cover_meal_pic_image_tag @meal_dashboard %>
  </div>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th scope="row">餐別</th>
        <td><%= @meal_dashboard.title %></td>
      </tr>
      <tr>
        <th scope="row">餐點內容</th>
        <td><%= @meal_dashboard.content %></td>
      </tr>
      <tr>
        <th scope="row">用餐時間</th>
        <td><%= @meal_dashboard.finished_at.strftime("%Y-%m-%d") %></td>
      </tr>
      <tr>
        <td colspan="4">
        <%= link_to '返回功能列表', teacher_dashboard_child_path(id: params[:child_id], anchor: 'meal'), class: 'btn back-button' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
