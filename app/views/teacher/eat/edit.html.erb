<%= render 'shared/backend/navbar'%>


<div class="container">
  <h1 class="text-warning"><%= @student.name %></h1>
  <%= form_with model:@meal_dashboard, url: teacher_dashboard_child_eat_path, local: true do |form| %>

    <div class="form-group">
      <%= form.label :title, '餐別', class:'text-white' %>
      <%= form.select(:title, ['早餐','午餐','晚餐','點心'], {}, { :class => 'form-control' }) %>
    </div>

    <div class="form-group">
    <%= form.label :content, '餐點內容', class:'text-white' %>
    <%= form.text_area :content, class:'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :finished_at, '吃飯時間', class:'text-white' %>
    <%= form.date_field :finished_at, class:'form-control' %>
    </div>

    <div class="form-group">
    <%= form.hidden_field :category, :value => 'meal',  class:'form-control' %>
    <%= form.hidden_field :child_id, :value => params[:child_id],  class:'form-control' %>
    </div>


    <div class="form-group">
    <%= form.submit '更新紀錄', class:'btn btn-warning' %>
    <%= link_to '回到上一頁',teacher_dashboard_child_path(id: params[:child_id]), class:'btn btn-warning'  %>
    <%= link_to '刪除', teacher_dashboard_child_eat_path(child_id: params[:child_id],id: params[:id]), method: :delete, class:'btn btn-danger' %>
    </div>
  <% end %>

</div>